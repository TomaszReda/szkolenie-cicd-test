#!groovy
pipeline {


    agent {
        docker {
            image 'maven:3.9.2-eclipse-temurin-17'
            args '-w /path/to/workspace'
        }
    }

    stages {
        stage('Checkout') {
            steps {
                git(url: 'http://github.com/spring-projects/spring-petclinic.git', branch: 'main')
            }
        }

        stage('Verify') {
            steps {
                print('test')
                sh 'mvn clean verify'
            }
        }

        stage('Verify') {
            steps {
                print('test')
                sh 'mvn clean spring-boot:build-image'
            }
        }

        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
    }

}
