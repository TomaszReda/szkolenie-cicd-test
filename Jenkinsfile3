#!groovy
pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/rechandler12/szkolenie-cicd-jenkins-gitlab.git'
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    def dockerfilePath = "szkolenie-cicd-jenkins-gitlab/docker-pipeline/Dockerfile"
                    def appImage = docker.build("my-docker-image-name", "-f ${dockerfilePath}")

                }
            }
        }
    }
}